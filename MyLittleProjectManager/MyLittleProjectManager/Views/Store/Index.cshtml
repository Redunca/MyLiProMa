@model StoreViewModel
@{
    ViewData["Title"] = "Index";
}

<h2>Store</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Titles</h3>
        
    </div>
    <div class="col-md-6">
        <h3>Avatar</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h3>Inventory</h3>
        <ul>
            @foreach (var item in Model.BoughtItems.OrderBy(i => i.Type))
            {
                <li>
                    @item.Name
                </li>
            }
        </ul>
    </div>
    <div class="col-md-6">
        <h3>Shopkeeper</h3>
        <h4>SelectedItems :</h4>
        <ol id="selectedItemsList"></ol>
        <h4>Price :</h4>
        <p class="text-warning" id="price"></p>
        <input  />    
    </div>
</div>